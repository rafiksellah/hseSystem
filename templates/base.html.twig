                            <a class="nav-link {{ app.request.get('_route') == 'app_super_admin_statistiques' ? 'active' : '' }}"
                                href="{{ path('app_super_admin_statistiques') }}">
                                <i class="fas fa-chart-pie"></i> Statistiques Globales
                            </a>
                        </li>
                        <!-- AJOUTEZ ICI LA SECTION GESTION ÉQUIPEMENTS POUR SUPER ADMIN -->
                        <!-- Séparateur -->
                        <li class="nav-item">
                            <hr class="sidebar-divider">
                            <div class="sidebar-heading">
                                <small class="text-white-50">GESTION ÉQUIPEMENTS</small>
                            </div>
                        </li>

                        <!-- Dashboard Équipements -->
