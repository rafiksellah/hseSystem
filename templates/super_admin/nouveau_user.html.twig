{% extends 'base.html.twig' %}

{% block title %}Créer un Utilisateur - Super Admin{% endblock %}

{% block page_title %}
<i class="fas fa-user-plus text-success"></i> Créer un Nouvel Utilisateur
<small class="text-muted">Créer un compte utilisateur avec tous les privilèges</small>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-user-plus"></i> Formulaire de Création
                </h6>
                <a href="{{ path('app_super_admin_users') }}" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <!-- Informations personnelles -->
                    <div class="col-md-6">
                        <div class="form-section mb-4">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-user"></i> Informations Personnelles
                            </h6>

                            <div class="mb-3">
                                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                    </div>

                    <!-- Informations professionnelles -->
                    <div class="col-md-6">
                        <div class="form-section mb-4">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-building"></i> Informations Professionnelles
                            </h6>

                            <div class="mb-3">
                                {{ form_label(form.codeAgent, 'Code Agent', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.codeAgent, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.codeAgent) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.zone, 'Zone', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.zone, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.zone) }}
                                <div class="form-text">
                                    <i class="fas fa-info-circle"></i> Sélectionnez la zone de travail de l'utilisateur
                                </div>
                            </div>

                            {% if form.roles is defined %}
                            <div class="mb-3">
                                {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.roles, {'attr': {'class': 'form-select', 'multiple': true}}) }}
                                {{ form_errors(form.roles) }}
                                <div class="form-text">
                                    <i class="fas fa-shield-alt"></i> Maintenez Ctrl (Cmd sur Mac) pour sélectionner
                                    plusieurs rôles
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Sécurité -->
                <div class="form-section mb-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-lock"></i> Sécurité
                    </h6>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.plainPassword.first, 'Mot de passe', {'label_attr': {'class':
                                'form-label'}}) }}
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe', {'label_attr':
                                {'class': 'form-label'}}) }}
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Exigences du mot de passe :</strong>
                        <ul class="mb-0 mt-2">
                            <li>Au moins 6 caractères</li>
                            <li>Recommandation : utiliser des lettres, chiffres et caractères spéciaux</li>
                        </ul>
                    </div>
                </div>

                <!-- Privilèges Super Admin -->
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="fas fa-crown"></i> Privilèges Super Administrateur
                    </h6>
                    <p class="mb-2">En tant que Super Administrateur, vous pouvez :</p>
                    <ul class="mb-0">
                        <li>Créer des utilisateurs avec n'importe quel rôle</li>
                        <li>Assigner des utilisateurs à n'importe quelle zone</li>
                        <li>Gérer tous les utilisateurs du système</li>
                        <li>Accéder à toutes les fonctionnalités administratives</li>
                    </ul>
                </div>

                <!-- Actions -->
                <div class="action-section">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_super_admin_users') }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <!-- Aide -->
        <div class="card shadow mt-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-question-circle"></i> Aide
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="text-danger">
                            <i class="fas fa-crown"></i> Super Administrateur
                        </h6>
                        <p class="small text-muted">
                            Accès complet au système, peut gérer tous les utilisateurs et toutes les zones.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-warning">
                            <i class="fas fa-user-shield"></i> Administrateur
                        </h6>
                        <p class="small text-muted">
                            Gère les utilisateurs de sa zone uniquement, peut créer et modifier des rapports HSE.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-success">
                            <i class="fas fa-user"></i> Utilisateur
                        </h6>
                        <p class="small text-muted">
                            Peut créer et gérer ses propres rapports HSE uniquement.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Validation du formulaire
        const form = document.querySelector('.needs-validation');
        if (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });
        }

        // Validation en temps réel des mots de passe
        const password1 = document.querySelector('#user_plainPassword_first');
        const password2 = document.querySelector('#user_plainPassword_second');

        if (password1 && password2) {
            function validatePasswords() {
                if (password1.value !== password2.value) {
                    password2.setCustomValidity('Les mots de passe ne correspondent pas');
                } else {
                    password2.setCustomValidity('');
                }
            }

            password1.addEventListener('input', validatePasswords);
            password2.addEventListener('input', validatePasswords);
        }
    });
</script>
{% endblock %}