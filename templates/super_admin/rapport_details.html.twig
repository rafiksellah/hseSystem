{% extends 'base.html.twig' %}

{% block title %}Détails Rapport HSE - {{ rapport.codeAgt }}{% endblock %}

{% block page_title %}
<i class="fas fa-clipboard-list text-info"></i> Détails du Rapport HSE
<small class="text-muted">{{ rapport.codeAgt }} - {{ rapport.nom }}</small>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .info-section {
        border-left: 4px solid #007bff;
        padding-left: 15px;
        margin-bottom: 20px;
    }

    .photo-container {
        max-width: 300px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .photo-container img {
        width: 100%;
        height: auto;
        transition: transform 0.3s ease;
    }

    .photo-container:hover img {
        transform: scale(1.05);
    }

    .status-timeline {
        position: relative;
        padding-left: 30px;
    }

    .status-timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(to bottom, #007bff, #28a745);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: -22px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #007bff;
        border: 2px solid #fff;
        box-shadow: 0 0 0 3px #007bff;
    }

    .timeline-item.completed::before {
        background-color: #28a745;
        box-shadow: 0 0 0 3px #28a745;
    }

    .export-dropdown .dropdown-menu {
        min-width: 250px;
    }

    .export-dropdown .dropdown-header {
        font-weight: bold;
        color: #495057;
        padding: 0.5rem 1rem;
        margin-bottom: 0;
    }

    .export-dropdown .dropdown-item {
        padding: 0.5rem 1rem;
        transition: all 0.2s ease;
    }

    .export-dropdown .dropdown-item:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }

    .export-dropdown .dropdown-item i {
        width: 20px;
        text-align: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="row">
    <!-- Informations principales -->
    <div class="col-lg-8">
        <!-- En-tête du rapport -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-clipboard-list"></i> Rapport HSE #{{ rapport.id }}
                        </h6>
                    </div>
                    <div class="col-auto">
                        <span class="badge {{ rapport.statut == 'Clôturé' ? 'bg-success' : 'bg-warning' }} fs-6">
                            {{ rapport.statut }}
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-section">
                            <h6 class="text-primary mb-2">
                                <i class="fas fa-user"></i> Informations Agent
                            </h6>
                            <p><strong>Nom :</strong> {{ rapport.nom }}</p>
                            <p><strong>Code AGT :</strong>
                                <span class="badge bg-secondary">{{ rapport.codeAgt }}</span>
                            </p>
                            {% if rapport.user %}
                            <p><strong>Utilisateur :</strong>
                                <a href="{{ path('app_super_admin_user_details', {'id': rapport.user.id}) }}"
                                    class="text-decoration-none">
                                    {{ rapport.user.fullName }}
                                </a>
                            </p>
                            <p><strong>Zone utilisateur :</strong>
                                <span
                                    class="badge {{ rapport.zoneUtilisateur == 'SIMTIS' ? 'bg-info' : 'bg-warning' }}">
                                    {{ rapport.zoneUtilisateur }}
                                </span>
                            </p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-section">
                            <h6 class="text-primary mb-2">
                                <i class="fas fa-calendar-alt"></i> Informations Temporelles
                            </h6>
                            <p><strong>Date :</strong> {{ rapport.date|date('d/m/Y') }}</p>
                            <p><strong>Heure :</strong> {{ rapport.heure|date('H:i') }}</p>
                            <p><strong>Créé le :</strong> {{ rapport.dateCreation|date('d/m/Y à H:i') }}</p>
                            {% if rapport.dateCloture %}
                            <p><strong>Clôturé le :</strong> {{ rapport.dateCloture|date('d/m/Y') }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Détails de l'incident -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-exclamation-triangle"></i> Détails de l'Incident
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>Zone de travail :</strong>
                            {% if rapport.zone %}
                            <br><span class="badge bg-light text-dark">{{ rapport.zone }}</span>
                            {% else %}
                            <br><span class="text-muted">Non spécifiée</span>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <strong>Emplacement :</strong>
                            <br>{{ rapport.emplacement ?: 'Non spécifié' }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>Équipement/Produit concerné :</strong>
                            <br>{{ rapport.equipementProduitConcerne ?: 'Non spécifié' }}
                        </div>

                        <div class="mb-3">
                            <strong>Cause probable :</strong>
                            <br>{{ rapport.causeProbable ?: 'Non spécifiée' }}
                        </div>
                    </div>
                </div>

                {% if rapport.descriptionAnomalie %}
                <div class="mt-3">
                    <strong>Description de l'anomalie :</strong>
                    <div class="mt-2 p-3 bg-light rounded">
                        {{ rapport.descriptionAnomalie|nl2br }}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Photos -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-camera"></i> Documentation Photographique
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    {% if rapport.photoConstat %}
                    <div class="col-md-6 mb-3">
                        <h6 class="text-primary">Photo du Constat</h6>
                        <div class="photo-container">
                            <img src="{{ asset('uploads/'~ rapport.photoConstat) }}" alt="Photo du constat"
                                class="img-fluid" data-bs-toggle="modal" data-bs-target="#photoModal"
                                data-photo="{{ asset('uploads/' ~ rapport.photoConstat) }}" style="cursor: pointer;">
                        </div>
                    </div>
                    {% endif %}

                    {% if rapport.photoActionCloturee %}
                    <div class="col-md-6 mb-3">
                        <h6 class="text-success">Photo de l'Action Clôturée</h6>
                        <div class="photo-container">
                            <img src="{{ asset('uploads/' ~ rapport.photoActionCloturee) }}" alt="Photo action clôturée"
                                class="img-fluid" data-bs-toggle="modal" data-bs-target="#photoModal"
                                data-photo="{{ asset('uploads/' ~ rapport.photoActionCloturee) }}"
                                style="cursor: pointer;">
                        </div>
                    </div>
                    {% endif %}

                    {% if not rapport.photoConstat and not rapport.photoActionCloturee %}
                    <div class="col-12">
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-camera fa-3x mb-3"></i>
                            <p>Aucune photo disponible</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Actions et clôture -->
        {% if rapport.actionCloturee == 'oui' or rapport.dateCloture %}
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-check-circle"></i> Actions de Clôture
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Action clôturée :</strong>
                            <span class="badge bg-success">{{ rapport.actionCloturee|title }}</span>
                        </p>
                        {% if rapport.dateCloture %}
                        <p><strong>Date de clôture :</strong> {{ rapport.dateCloture|date('d/m/Y') }}</p>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {% if rapport.heureAction %}
                        <p><strong>Heure d'action :</strong> {{ rapport.heureAction|date('H:i') }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Sidebar avec timeline et actions -->
    <div class="col-lg-4">
        <!-- Actions rapides -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-cogs"></i> Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <!-- Bouton Modifier -->
                    {% if rapport.canBeModifiedByUser(app.user) %}
                    <a href="{{ path('app_admin_rapport_modifier', {'id': rapport.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier le rapport
                    </a>
                    {% endif %}

                    <!-- Boutons d'export -->
                    <div class="export-dropdown">
                        <div class="dropdown">
                            <button class="btn btn-outline-success dropdown-toggle w-100" type="button"
                                id="exportDropdown{{ rapport.id }}" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-download"></i> Exporter ce rapport
                            </button>
                            <ul class="dropdown-menu w-100" aria-labelledby="exportDropdown{{ rapport.id }}">
                                <li>
                                    <h6 class="dropdown-header">
                                        <i class="fas fa-file-excel text-success me-2"></i>Format Excel
                                    </h6>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                        href="{{ path('app_admin_export_rapport_excel', {id: rapport.id}) }}">
                                        <i class="fas fa-table text-success me-2"></i>Tableau Excel standard
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <h6 class="dropdown-header">
                                        <i class="fas fa-file-pdf text-danger me-2"></i>Format PDF
                                    </h6>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                        href="{{ path('app_admin_export_rapport_pdf', {id: rapport.id}) }}">
                                        <i class="fas fa-file-pdf text-danger me-2"></i>PDF complet avec images
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Navigation -->
                    {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
                    <a href="{{ path('app_super_admin_rapports') }}" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Tous les rapports
                    </a>
                    {% else %}
                    <a href="{{ path('app_admin_rapports') }}" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Mes rapports
                    </a>
                    {% endif %}

                    <!-- Voir utilisateur (Super Admin seulement) -->
                    {% if rapport.user and 'ROLE_SUPER_ADMIN' in app.user.roles %}
                    <a href="{{ path('app_super_admin_user_details', {'id': rapport.user.id}) }}" class="btn btn-info">
                        <i class="fas fa-user"></i> Voir l'utilisateur
                    </a>
                    {% endif %}

                    <!-- Bouton Supprimer (Super Admin seulement) -->
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <hr class="my-2">
                    <a href="{{ path('app_admin_rapport_supprimer', {'id': rapport.id}) }}"
                        class="btn btn-outline-danger"
                        onclick="return confirm('⚠️ ATTENTION ⚠️\\n\\nÊtes-vous sûr de vouloir supprimer définitivement ce rapport ?\\n\\nCette action est IRRÉVERSIBLE et supprimera :\\n- Toutes les informations du rapport\\n- Les photos associées\\n- L\\'historique complet\\n\\nTapez CONFIRMER pour valider :')">
                        <i class="fas fa-trash"></i> Supprimer définitivement
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Timeline du statut -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">
                    <i class="fas fa-history"></i> Chronologie
                </h6>
            </div>
            <div class="card-body">
                <div class="status-timeline">
                    <div class="timeline-item completed">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="fas fa-plus-circle text-primary"></i> Rapport créé
                                </h6>
                                <p class="text-muted mb-0 small">
                                    Par {{ rapport.nom }}
                                </p>
                            </div>
                            <small class="text-muted">{{ rapport.dateCreation|date('d/m H:i') }}</small>
                        </div>
                    </div>

                    {% if rapport.statut == 'Clôturé' %}
                    <div class="timeline-item completed">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="fas fa-check-circle text-success"></i> Rapport clôturé
                                </h6>
                                <p class="text-muted mb-0 small">
                                    Action terminée
                                </p>
                            </div>
                            <small class="text-muted">
                                {% if rapport.dateCloture %}
                                {{ rapport.dateCloture|date('d/m') }}
                                {% if rapport.heureAction %}{{ rapport.heureAction|date(' H:i') }}{% endif %}
                                {% else %}
                                -
                                {% endif %}
                            </small>
                        </div>
                    </div>
                    {% else %}
                    <div class="timeline-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="fas fa-clock text-warning"></i> En cours de traitement
                                </h6>
                                <p class="text-muted mb-0 small">
                                    En attente de clôture
                                </p>
                            </div>
                            <small class="text-warning">En cours</small>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Statistiques de l'utilisateur (Super Admin) -->
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles and rapport.user %}
        <div class="card shadow mt-4">
            <div class="card-header py-3 bg-info text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-chart-pie"></i> Statistiques de l'agent
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-primary mb-0">{{ rapport.user.rapportsHSE|length }}</h5>
                            <small class="text-muted">Rapports totaux</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-success mb-0">
                            {{ rapport.user.rapportsHSE|filter(r => r.statut == 'Clôturé')|length }}
                        </h5>
                        <small class="text-muted">Rapports clôturés</small>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_super_admin_user_details', {'id': rapport.user.id}) }}"
                        class="btn btn-sm btn-outline-info w-100">
                        <i class="fas fa-user"></i> Voir tous ses rapports
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Modal pour agrandir les photos -->
<div class="modal fade" id="photoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Photo du rapport #{{ rapport.id }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalPhoto" src="" alt="Photo agrandie" class="img-fluid">
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Rapport du {{ rapport.date|date('d/m/Y') }} - {{ rapport.nom }}
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Gestion du modal photo
        const photoModal = document.getElementById('photoModal');
        const modalPhoto = document.getElementById('modalPhoto');

        document.querySelectorAll('[data-photo]').forEach(img => {
            img.addEventListener('click', function () {
                modalPhoto.src = this.getAttribute('data-photo');
            });
        });

        // Animation des éléments timeline
        const timelineItems = document.querySelectorAll('.timeline-item');
        timelineItems.forEach((item, index) => {
            setTimeout(() => {
                item.style.opacity = '0';
                item.style.transform = 'translateX(-20px)';
                item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';

                setTimeout(() => {
                    item.style.opacity = '1';
                    item.style.transform = 'translateX(0)';
                }, 100);
            }, index * 200);
        });

        // Amélioration de la confirmation de suppression pour Super Admin
        const deleteButton = document.querySelector('a[href*="supprimer"]');
        if (deleteButton) {
            deleteButton.addEventListener('click', function (e) {
                e.preventDefault();

                const result = prompt(
                    '⚠️ SUPPRESSION DÉFINITIVE ⚠️\n\n' +
                    'Cette action supprimera DÉFINITIVEMENT :\n' +
                    '• Le rapport #{{ rapport.id }}\n' +
                    '• Toutes les photos associées\n' +
                    '• L\'historique complet\n\n' +
                    'Pour confirmer, tapez exactement : SUPPRIMER'
                );

                if (result === 'SUPPRIMER') {
                    window.location.href = this.href;
                } else if (result !== null) {
                    alert('❌ Suppression annulée - Le texte de confirmation ne correspond pas.');
                }
            });
        }

        // Animation d'hover pour les boutons d'export
        document.querySelectorAll('.export-dropdown .dropdown-item').forEach(item => {
            item.addEventListener('mouseenter', function () {
                this.style.paddingLeft = '1.5rem';
            });

            item.addEventListener('mouseleave', function () {
                this.style.paddingLeft = '1rem';
            });
        });
    });
</script>
{% endblock %}