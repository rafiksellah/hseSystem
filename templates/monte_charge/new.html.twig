{% extends 'base.html.twig' %}

{% block title %}Nouveau Monte-Charge{% endblock %}

{% block body %}
<div class="container">
<script>
console.log('Template Monte-Charge chargé');
// Debug: afficher les champs du formulaire avant soumission
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            console.log('Formulaire en cours de soumission');
            const formData = new FormData(form);
            for (let [key, value] of formData.entries()) {
                console.log(key + ':', value);
            }
        });
    }
});
</script>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Ajouter un nouveau Monte-Charge
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.numeroMonteCharge, 'Numéro Monte-Charge', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.numeroMonteCharge) }}
                                {{ form_errors(form.numeroMonteCharge) }}
                                <small class="text-muted">Ce numéro doit être unique</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.zone, 'Zone', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.zone) }}
                                {{ form_errors(form.zone) }}
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.emplacement, 'Emplacement', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.emplacement) }}
                                {{ form_errors(form.emplacement) }}
                                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nombrePortes, 'Nombre de Portes', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nombrePortes) }}
                                {{ form_errors(form.nombrePortes) }}
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.numeroPorte, 'Numéro de Porte', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.numeroPorte) }}
                                {{ form_errors(form.numeroPorte) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_monte_charge_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% include '_partials/datalists.html.twig' %}
{% endblock %}
