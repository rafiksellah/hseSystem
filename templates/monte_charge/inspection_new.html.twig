{% extends 'base.html.twig' %}

{% block title %}Nouvelle Inspection Monte Charge{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-clipboard-check text-primary me-2"></i>
                    Nouvelle Inspection Monte Charge
                </h1>
                <a href="{{ path('app_monte_charge_show', {'id': monte_charge.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Retour
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-elevator me-2"></i>
                        Monte Charge #{{ monte_charge.numeroMonteCharge }} - {{ monte_charge.zone }}
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" enctype="multipart/form-data">
                        <!-- Questions -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-question-circle"></i> Questions de contrôle :
                                </h6>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <label class="form-label fw-bold">1. LES PORTES MONTE CHARGE SONT-ELLES FERMÉES ?</label>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[portesFermees]" id="oui_portes_fermees" value="Oui" required="">
                                                    <label class="form-check-label text-success fw-bold" for="oui_portes_fermees">
                                                        <i class="fas fa-check-circle"></i> Oui
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[portesFermees]" id="non_portes_fermees" value="Non">
                                                    <label class="form-check-label text-danger fw-bold" for="non_portes_fermees">
                                                        <i class="fas fa-times-circle"></i> Non
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <label class="form-label fw-bold">2. LES CONSIGNES D'UTILISATION SONT-ELLES RESPECTÉES ?</label>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[consignesRespectees]" id="oui_consignes_respectees" value="Oui" required="">
                                                    <label class="form-check-label text-success fw-bold" for="oui_consignes_respectees">
                                                        <i class="fas fa-check-circle"></i> Oui
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[consignesRespectees]" id="non_consignes_respectees" value="Non">
                                                    <label class="form-check-label text-danger fw-bold" for="non_consignes_respectees">
                                                        <i class="fas fa-times-circle"></i> Non
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <label class="form-label fw-bold">3. LES FINS COURSES FONCTIONNENT CORRECTEMENT ?</label>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[finsCoursesFonctionnent]" id="oui_fins_courses" value="Oui" required="">
                                                    <label class="form-check-label text-success fw-bold" for="oui_fins_courses">
                                                        <i class="fas fa-check-circle"></i> Oui
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[finsCoursesFonctionnent]" id="non_fins_courses" value="Non">
                                                    <label class="form-check-label text-danger fw-bold" for="non_fins_courses">
                                                        <i class="fas fa-times-circle"></i> Non
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <label class="form-label fw-bold">4. UN ESSAI À VIDE A ÉTÉ RÉALISÉ ?</label>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[essaiVideRealise]" id="oui_essai_vide" value="Oui" required="">
                                                    <label class="form-check-label text-success fw-bold" for="oui_essai_vide">
                                                        <i class="fas fa-check-circle"></i> Oui
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="inspection_monte_charge[essaiVideRealise]" id="non_essai_vide" value="Non">
                                                    <label class="form-check-label text-danger fw-bold" for="non_essai_vide">
                                                        <i class="fas fa-times-circle"></i> Non
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Observations -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label for="observations" class="form-label">
                                    <i class="fas fa-comment-alt"></i> Observations (optionnel)
                                </label>
                                <textarea name="inspection_monte_charge[observations]" id="observations" class="form-control" rows="4" placeholder="Décrivez les problèmes constatés, les actions correctives nécessaires..."></textarea>
                            </div>
                        </div>

                        <!-- Photo -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label for="photo_observation" class="form-label">
                                    <i class="fas fa-camera"></i> Photo d'observation (optionnel)
                                </label>
                                <input type="file" name="inspection_monte_charge[photoObservation]" id="photo_observation" class="form-control" accept="image/*">
                                <div class="form-text">
                                    Formats acceptés : JPG, PNG, GIF. Taille max : 5MB
                                </div>
                            </div>
                        </div>

                        <!-- Boutons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('app_monte_charge_show', {'id': monte_charge.id}) }}" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left"></i> Annuler
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-lg">
                                        <i class="fas fa-save"></i> Enregistrer l'inspection
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}