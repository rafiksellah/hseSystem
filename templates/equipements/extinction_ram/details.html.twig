{% extends 'base.html.twig' %}

{% block title %}Détails Extinction RAM - {{ ram.zone }}{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-fire-extinguisher"></i> Détails Extinction Localisée RAM
          </h5>
          <div>
            <a href="{{ path('app_equipements_extinction_ram_export_detail_pdf', {id: ram.id}) }}" 
               class="btn btn-dark btn-sm me-2" target="_blank">
              <i class="fas fa-file-pdf"></i> Exporter PDF
            </a>
            <a href="{{ path('app_equipements_extinction_ram') }}" class="btn btn-light btn-sm">
              <i class="fas fa-arrow-left"></i> Retour
            </a>
          </div>
        </div>

        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <h6 class="text-danger border-bottom pb-2">
                <i class="fas fa-info-circle"></i> Informations Générales
              </h6>
              <table class="table table-sm">
                <tr><th width="40%">Zone :</th><td><span class="badge bg-danger">{{ ram.zone }}</span></td></tr>
                <tr><th>Emplacement :</th><td>{{ ram.emplacement ?? '-' }}</td></tr>
                <tr><th>Numérotation :</th><td><strong>{{ ram.numerotation }}</strong></td></tr>
                <tr><th>Type :</th><td>{{ ram.type ?? '-' }}</td></tr>
                <tr><th>Vanne :</th><td>{{ ram.vanne ?? '-' }}</td></tr>
                <tr><th>Date de création :</th><td>{{ ram.dateCreation|date('d/m/Y à H:i') }}</td></tr>
              </table>
            </div>

            <div class="col-md-6">
              <h6 class="text-danger border-bottom pb-2">
                <i class="fas fa-clipboard-check"></i> État et Inspections
              </h6>
              <table class="table table-sm">
                <tr>
                  <th width="40%">État actuel :</th>
                  <td>
                    {% set conformite = ram.statutConformite %}
                    {% if conformite == 'Conforme' %}
                      <span class="badge bg-success"><i class="fas fa-check-circle"></i> Conforme</span>
                    {% elseif conformite == 'Non conforme' %}
                      <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Non conforme</span>
                    {% else %}
                      <span class="badge bg-secondary"><i class="fas fa-question-circle"></i> Non inspecté</span>
                    {% endif %}
                  </td>
                </tr>
                <tr><th>Nombre d'inspections :</th><td><strong>{{ ram.nombreInspections }}</strong></td></tr>
                {% set derniere = ram.derniereInspection %}
                {% if derniere %}
                <tr><th>Dernière inspection :</th><td>{{ derniere.dateInspection|date('d/m/Y') }}</td></tr>
                <tr><th>Inspectée par :</th><td>{{ derniere.inspectePar.fullName }}</td></tr>
                {% endif %}
              </table>

              {% if is_granted('ROLE_USER') %}
              <div class="mt-3">
                <a href="{{ path('app_equipements_extinction_ram_inspecter', {id: ram.id}) }}" 
                   class="btn btn-danger btn-sm w-100">
                  <i class="fas fa-clipboard-check"></i> Effectuer une inspection
                </a>
              </div>
              {% endif %}
            </div>
          </div>

          <h6 class="text-danger border-bottom pb-2 mb-3">
            <i class="fas fa-history"></i> Historique des Inspections
          </h6>

          {% if ram.inspections|length > 0 %}
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-light">
                <tr>
                  <th>Date</th><th>Inspecté par</th><th>Résultat</th><th>Critères validés</th><th>Observations</th><th>Photo</th>
                  {% if is_granted('ROLE_ADMIN') %}
                  <th>Actions</th>
                  {% endif %}
                </tr>
              </thead>
              <tbody>
                {% for inspection in ram.inspections|sort((a, b) => b.dateInspection <=> a.dateInspection) %}
                <tr>
                  <td>{{ inspection.dateInspection|date('d/m/Y à H:i') }}</td>
                  <td>{{ inspection.inspectePar.fullName }}</td>
                  <td>
                    {% if inspection.valide %}
                      <span class="badge bg-success"><i class="fas fa-check-circle"></i> Conforme</span>
                    {% else %}
                      <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Non conforme</span>
                    {% endif %}
                  </td>
                  <td class="text-center">
                    <strong>{{ inspection.conformite }}</strong>
                  </td>
                  <td>
                    {% if inspection.observations %}
                      <small>{{ inspection.observations|u.truncate(50, '...') }}</small>
                    {% else %}
                      <span class="text-muted">-</span>
                    {% endif %}
                  </td>
                  <td class="text-center">
                    {% if inspection.photoObservation %}
                      <a href="{{ asset('uploads/' ~ inspection.photoObservation) }}" target="_blank" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-image"></i>
                      </a>
                    {% else %}
                      <span class="text-muted">-</span>
                    {% endif %}
                  </td>
                  {% if is_granted('ROLE_ADMIN') %}
                  <td class="text-center">
                    <form method="post" action="{{ path('app_equipements_inspection_ram_supprimer', {id: inspection.id}) }}" 
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette inspection ?');" style="display: inline;">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inspection.id) }}">
                      <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                  {% endif %}
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          {% else %}
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Aucune inspection enregistrée pour ce système d'extinction.
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

