{% extends 'base.html.twig' %}

{% block title %}Détails Issue de Secours - {{ issue.zone }}{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-door-open"></i> Détails Issue de Secours
          </h5>
          <div>
            <a href="{{ path('app_equipements_issue_secours_export_detail_pdf', {id: issue.id}) }}" 
               class="btn btn-danger btn-sm me-2" target="_blank">
              <i class="fas fa-file-pdf"></i> Exporter PDF
            </a>
            <a href="{{ path('app_equipements_issues_secours') }}" class="btn btn-light btn-sm">
              <i class="fas fa-arrow-left"></i> Retour
            </a>
          </div>
        </div>

        <div class="card-body">
          <!-- Informations générales -->
          <div class="row mb-4">
            <div class="col-md-6">
              <h6 class="text-success border-bottom pb-2">
                <i class="fas fa-info-circle"></i> Informations Générales
              </h6>
              <table class="table table-sm">
                <tr>
                  <th width="40%">Zone :</th>
                  <td><span class="badge bg-success">{{ issue.zone }}</span></td>
                </tr>
                <tr>
                  <th>Numérotation :</th>
                  <td><strong>{{ issue.numerotation }}</strong></td>
                </tr>
                <tr>
                  <th>Type :</th>
                  <td>{{ issue.type ?? '-' }}</td>
                </tr>
                <tr>
                  <th>Barre antipanique :</th>
                  <td>
                    {% if issue.barreAntipanique == 'OK' %}
                      <span class="badge bg-success">OK</span>
                    {% elseif issue.barreAntipanique == 'NOK' %}
                      <span class="badge bg-danger">NOK</span>
                    {% else %}
                      <span class="badge bg-secondary">N/A</span>
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <th>Date de création :</th>
                  <td>{{ issue.dateCreation|date('d/m/Y à H:i') }}</td>
                </tr>
              </table>
            </div>

            <div class="col-md-6">
              <h6 class="text-success border-bottom pb-2">
                <i class="fas fa-clipboard-check"></i> État et Inspections
              </h6>
              <table class="table table-sm">
                <tr>
                  <th width="40%">État actuel :</th>
                  <td>
                    {% set conformite = issue.statutConformite %}
                    {% if conformite == 'Conforme' %}
                      <span class="badge bg-success">
                        <i class="fas fa-check-circle"></i> Conforme
                      </span>
                    {% elseif conformite == 'Non conforme' %}
                      <span class="badge bg-danger">
                        <i class="fas fa-times-circle"></i> Non conforme
                      </span>
                    {% else %}
                      <span class="badge bg-secondary">
                        <i class="fas fa-question-circle"></i> Non inspecté
                      </span>
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <th>Nombre d'inspections :</th>
                  <td><strong>{{ issue.nombreInspections }}</strong></td>
                </tr>
                {% set derniere = issue.derniereInspection %}
                {% if derniere %}
                <tr>
                  <th>Dernière inspection :</th>
                  <td>{{ derniere.dateInspection|date('d/m/Y') }}</td>
                </tr>
                <tr>
                  <th>Inspectée par :</th>
                  <td>{{ derniere.inspectePar.fullName }}</td>
                </tr>
                {% endif %}
              </table>

              {% if is_granted('ROLE_USER') %}
              <div class="mt-3">
                <a href="{{ path('app_equipements_issues_secours_inspecter', {id: issue.id}) }}" 
                   class="btn btn-success btn-sm w-100">
                  <i class="fas fa-clipboard-check"></i> Effectuer une inspection
                </a>
              </div>
              {% endif %}
            </div>
          </div>

