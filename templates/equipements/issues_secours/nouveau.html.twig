{% extends 'base.html.twig' %}

{% block title %}Ajouter une Issue de Secours{% endblock %}

{% block page_title %}
<i class="fas fa-door-open text-success"></i> Ajouter une Issue de Secours
{% endblock %}

{% block body %}
{% include '_partials/datalists.html.twig' %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fas fa-plus"></i> Nouvelle Issue de Secours</h5>
          <a href="{{ path('app_equipements_issues_secours') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
          </a>
        </div>
        <div class="card-body">
          <form method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="zone" name="zone" 
                       list="zone-issues-options" placeholder="Saisir ou sélectionner une zone" required>
                <datalist id="zone-issues-options">
                  {% for key, zone in zones_disponibles %}
                    <option value="{{ zone }}">
                  {% endfor %}
                </datalist>
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>
              </div>

              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">Numérotation <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="numerotation" name="numerotation" 
                       placeholder="Ex: G01, BR01, ADM01" required>
                <small class="text-muted">Saisie libre - Ex: G01, CF.D 01, etc.</small>
              </div>

              <div class="col-md-6 mb-3">
                <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                <input type="text" name="type" id="type" class="form-control" 
                       value="{{ issue.type }}" list="type-issues-options" 
                       placeholder="Saisir ou sélectionner un type" required>
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>              </div>

              <div class="col-md-6 mb-3">
                <label for="barre_antipanique" class="form-label">Barre Antipanique</label>
                <input type="text" name="barre_antipanique" id="barre_antipanique" class="form-control" 
                       value="{{ issue.barreAntipanique }}" list="barre-antipanique-options"
                       placeholder="Saisir ou sélectionner un état">
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>              </div>
            </div>

            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i> Les issues de secours sont des voies d'évacuation en cas d'urgence.
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="{{ path('app_equipements_issues_secours') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Annuler
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

