{% extends 'base.html.twig' %}

{% block title %}Modifier Issue de Secours{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fas fa-edit"></i> Modifier Issue de Secours</h5>
          <a href="{{ path('app_equipements_issues_secours') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
          </a>
        </div>
        <div class="card-body">
          <form method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone <span class="text-danger">*</span></label>
                <select class="form-select" id="zone" name="zone" required>
                  {% for key, zone_name in zones_disponibles %}
                    <option value="{{ zone_name }}" {{ issue.zone == zone_name ? 'selected' : '' }}>{{ zone_name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">Num√©rotation <span class="text-danger">*</span></label>
                <select class="form-select" id="numerotation" name="numerotation" required>
                  {% for key, num in numerotations_disponibles %}
                    <option value="{{ num }}" {{ issue.numerotation == num ? 'selected' : '' }}>{{ num }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                <select class="form-select" id="type" name="type" required>
                  {% for key, type_name in types_disponibles %}
                    <option value="{{ type_name }}" {{ issue.type == type_name ? 'selected' : '' }}>{{ type_name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="barre_antipanique" class="form-label">Barre antipanique <span class="text-danger">*</span></label>
                <select class="form-select" id="barre_antipanique" name="barre_antipanique" required>
                  {% for key, etat in etats_barre %}
                    <option value="{{ etat }}" {{ issue.barreAntipanique == etat ? 'selected' : '' }}>{{ etat }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="{{ path('app_equipements_issues_secours') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Annuler
              </a>
              <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer les modifications
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

