{% extends 'base.html.twig' %}

{% block title %}Modifier Inspection MLCI{% endblock %}

{% block page_title %}
<i class="fas fa-edit text-warning"></i> Modifier Inspection MLCI
<small class="text-muted">{{ extincteur.numerotation }}</small>
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow">
        <div class="card-header bg-warning text-white">
          <h5 class="mb-0">
            <i class="fas fa-fire-extinguisher"></i> Modifier Inspection - Extincteur {{ extincteur.numerotation }}
          </h5>
        </div>
        <div class="card-body">
          <!-- Avertissement Admin uniquement -->
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Modification réservée aux administrateurs</strong><br>
            Cette inspection a été réalisée le {{ inspection.dateInspection|date('d/m/Y à H:i') }} 
            par {{ inspection.inspectePar.fullName }}.
          </div>

          <!-- Informations de l'extincteur -->
          <div class="alert alert-info mb-4">
            <div class="row">
              <div class="col-md-6">
                <strong>Extincteur:</strong> {{ extincteur.numerotation }}<br>
                <strong>Zone:</strong> <span class="badge bg-info">{{ extincteur.zone }}</span><br>
                <strong>Emplacement:</strong> {{ extincteur.emplacement ?? 'Non spécifié' }}
              </div>
              <div class="col-md-6">
                <strong>Type:</strong> {{ extincteur.type ?? 'Non spécifié' }}<br>
                <strong>Capacité:</strong> {{ extincteur.capacite ?? 'Non spécifiée' }}<br>
                <strong>Statut actuel:</strong> 
                {% if inspection.valide %}
                  <span class="badge bg-success">Conforme</span>
                {% else %}
                  <span class="badge bg-danger">Non conforme</span>
                {% endif %}
              </div>
            </div>
          </div>

          <!-- Formulaire de modification -->
          <form method="POST" enctype="multipart/form-data">
            <h5 class="text-primary mb-3">
              <i class="fas fa-clipboard-list"></i> Critères de conformité
            </h5>

            <div class="row">
              {% for key, critere in criteres %}
              <div class="col-lg-6 mb-3">
                <div class="card border">
                  <div class="card-body">
                    <h6 class="card-title">{{ loop.index }}. {{ critere }}</h6>
                    <div class="form-check form-check-inline me-3">
                      <input class="form-check-input" type="radio" 
                             name="critere_{{ key }}" 
                             id="{{ key }}_oui" 
                             value="oui" 
                             {{ inspection.criteres[key] is defined and inspection.criteres[key] ? 'checked' : '' }}
                             required>
                      <label class="form-check-label text-success fw-bold" for="{{ key }}_oui">
                        <i class="fas fa-check"></i> Oui
                      </label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" 
                             name="critere_{{ key }}" 
                             id="{{ key }}_non" 
                             value="non"
                             {{ inspection.criteres[key] is defined and not inspection.criteres[key] ? 'checked' : '' }}
                             required>
                      <label class="form-check-label text-danger fw-bold" for="{{ key }}_non">
                        <i class="fas fa-times"></i> Non
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>

            <!-- Observations -->
            <div class="row mt-4">
              <div class="col-12">
                <div class="form-group mb-3">
                  <label for="observations" class="form-label">
                    <i class="fas fa-comment"></i> Observations (optionnel)
                  </label>
                  <textarea name="observations" id="observations" class="form-control" rows="4" 
                            placeholder="Commentaires additionnels sur l'inspection...">{{ inspection.observations }}</textarea>
                </div>
              </div>
            </div>

            <!-- Photo d'observation -->
            <div class="row">
              <div class="col-12">
                <div class="form-group">
                  <label for="photo_observation" class="form-label">
                    <i class="fas fa-camera"></i> Photo d'observation (optionnel)
                  </label>
                  
                  {% if inspection.photoObservation %}
                  <div class="mb-2">
                    <img src="{{ asset('uploads/photos/' ~ inspection.photoObservation) }}" 
                         alt="Photo actuelle" 
                         class="img-thumbnail" 
                         style="max-width: 200px;">
                    <p class="text-muted small">Photo actuelle - Télécharger une nouvelle photo pour la remplacer</p>
                  </div>
                  {% endif %}
                  
                  <input type="file" name="photo_observation" id="photo_observation" 
                         class="form-control" accept="image/*">
                  <small class="text-muted">
                    <i class="fas fa-info-circle"></i> Format accepté : JPG, PNG, GIF (max 5MB)
                  </small>
                </div>
              </div>
            </div>

            <!-- Boutons -->
            <div class="row mt-4">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <a href="{{ path('app_equipements_inspection_details', {id: inspection.id}) }}" 
                     class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                  </a>
                  <button type="submit" class="btn btn-warning btn-lg" id="submitBtn">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Compter les réponses "Oui" en temps réel
    const radios = document.querySelectorAll('input[type="radio"]');
    const submitBtn = document.getElementById('submitBtn');

    function updateSubmitButton() {
        const totalCriteres = {{ criteres|length }};
        const criteresOui = document.querySelectorAll('input[value="oui"]:checked').length;
        const criteresNon = document.querySelectorAll('input[value="non"]:checked').length;
        const totalReponses = criteresOui + criteresNon;

        if (totalReponses === totalCriteres) {
            if (criteresOui === totalCriteres) {
                submitBtn.className = 'btn btn-success btn-lg';
                submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Inspection conforme - Enregistrer';
            } else {
                submitBtn.className = 'btn btn-danger btn-lg';
                submitBtn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Inspection non conforme - Enregistrer';
            }
        } else {
            submitBtn.className = 'btn btn-warning btn-lg';
            submitBtn.innerHTML = '<i class="fas fa-save"></i> Enregistrer les modifications (' + totalReponses + '/' + totalCriteres + ')';
        }
    }

    radios.forEach(radio => {
        radio.addEventListener('change', updateSubmitButton);
    });

    updateSubmitButton();
});
</script>
{% endblock %}

