{# templates/equipements/extincteurs/liste.html.twig - MODIFIÉE #}
{% extends 'base.html.twig' %}

{% block title %}Extincteurs - État{% endblock %}

{% block page_title %}
<i class="fas fa-fire-extinguisher text-danger"></i> Extincteurs - État
<small class="text-muted">Vérification et validation</small>
{% endblock %}

{% block body %}
<div class="container-fluid">
  <!-- Barre d'outils -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-list"></i> Liste des Extincteurs
            {% if not is_granted('ROLE_SUPER_ADMIN') %}
            - Zone {{ user_zone }}
            {% endif %}
          </h5>
          <div>
            <a href="{{ path('app_equipements_dashboard') }}" class="btn btn-outline-secondary btn-sm me-2">
              <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_equipements_extincteurs_export_excel', app.request.query.all) }}" 
               class="btn btn-success btn-sm me-2">
              <i class="fas fa-file-excel"></i> Export Excel
            </a>
            <a href="{{ path('app_equipements_extincteurs_export_pdf', app.request.query.all) }}" 
               class="btn btn-danger btn-sm me-2">
              <i class="fas fa-file-pdf"></i> Export PDF
            </a>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_equipements_extincteurs_nouveau') }}" class="btn btn-primary btn-sm">
              <i class="fas fa-plus"></i> Ajouter
            </a>
            {% endif %}
          </div>
        </div>
        <div class="card-body">
          <!-- Filtres -->
          <form method="GET" class="row g-3 mb-3">
            <div class="col-md-4">
              <label for="emplacement" class="form-label">Emplacement</label>
              <select name="emplacement" id="emplacement" class="form-select form-select-sm">
                <option value="">Tous les emplacements</option>
                {% for key, empl in emplacements_disponibles %}
                <option value="{{ empl }}" {{ search_params.emplacement==empl ? 'selected' : '' }}>
                  {{ empl }}
                </option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-3">
              <label for="numerotation" class="form-label">Numéro</label>
              <input type="text" name="numerotation" id="numerotation" class="form-control form-control-sm"
                value="{{ search_params.numerotation }}" placeholder="Ex: 4, 133...">
            </div>
            <div class="col-md-2">
              <label for="conformite" class="form-label">État</label>
              <select name="conformite" id="conformite" class="form-select form-select-sm">
                <option value="">Tous</option>
                <option value="conforme" {{ search_params.conformite=='conforme' ? 'selected' : '' }}>Conformes</option>
                <option value="non_conforme" {{ search_params.conformite=='non_conforme' ? 'selected' : '' }}>Non conformes</option>
                <option value="non_inspecte" {{ search_params.conformite=='non_inspecte' ? 'selected' : '' }}>Non inspectés</option>
              </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
              <button type="submit" class="btn btn-primary btn-sm me-2">
                <i class="fas fa-search"></i> Filtrer
              </button>
              <a href="{{ path('app_equipements_extincteurs') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-undo"></i> Reset
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Liste des extincteurs -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          {% if extincteurs is not empty %}
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th>Numéro</th>
                  <th>Zone</th>
                  <th>Emplacement</th>
                  <th>Type</th>
                  <th>Capacité</th>
                  <th>État</th>
                  <th>Dernière Inspection</th>
                  <th width="200">Actions</th> {# Largeur fixe pour les actions #}
                </tr>
              </thead>
              <tbody>
                {% for extincteur in extincteurs %}
                <tr>
                  <td><strong>{{ extincteur.numerotation }}</strong></td>
                  <td>
                    <span class="badge {{ extincteur.zone == 'SIMTIS' ? 'bg-info' : 'bg-success' }}">
                      {{ extincteur.zone }}
                    </span>
                  </td>
                  <td>{{ extincteur.emplacement ?? 'Non spécifié' }}</td>
                  <td>{{ extincteur.type ?? 'Non spécifié' }}</td>
                  <td>{{ extincteur.capacite ?? 'Non spécifiée' }}</td>
                  <td>
                    {% set conformite = extincteur.statutConformite %}
                    {% if conformite == 'Conforme' %}
                    <span class="badge bg-success">
                      <i class="fas fa-check-circle"></i> Conforme
                    </span>
                    {% elseif conformite == 'Non conforme' %}
                    <span class="badge bg-danger">
                      <i class="fas fa-times-circle"></i> Non conforme
                    </span>
                    {% else %}
                    <span class="badge bg-warning">
                      <i class="fas fa-clock"></i> Non inspecté
                    </span>
                    {% endif %}
                  </td>
                  <td>
                    {% set derniere = extincteur.derniereInspection %}
                    {% if derniere %}
                    <small>
                      {{ derniere.dateInspection|date('d/m/Y') }}<br>
                      <span class="text-muted">par {{ derniere.inspectePar.codeAgent }}</span>
                    </small>
                    {% else %}
                    <span class="text-muted">-</span>
                    {% endif %}
                  </td>
                  <td>
                    <div class="btn-group-vertical d-flex gap-1" role="group">
                      {% set derniere = extincteur.derniereInspection %}
                      {% if derniere %}
                        <a href="{{ path('app_equipements_inspection_details', {id: derniere.id}) }}" 
                           class="btn btn-info btn-sm" title="Voir inspection">
                          <i class="fas fa-eye"></i>
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                          <a href="{{ path('app_equipements_inspection_modifier', {id: derniere.id}) }}" 
                             class="btn btn-warning btn-sm" title="Modifier inspection">
                            <i class="fas fa-edit"></i>
                          </a>
                        {% endif %}
                      {% else %}
                        <a href="{{ path('app_equipements_extincteurs_inspecter', {id: extincteur.id}) }}" 
                           class="btn btn-primary btn-sm" title="Inspecter">
                          <i class="fas fa-clipboard-check"></i> Inspecter
                        </a>
                      {% endif %}
                      
                      {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                      <!-- Boutons d'administration -->
                      <div class="btn-group btn-group-sm mt-1" role="group">
                        <a href="{{ path('app_equipements_extincteurs_modifier', {'id': extincteur.id}) }}"
                          class="btn btn-outline-secondary" title="Modifier">
                          <i class="fas fa-cog"></i>
                        </a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="{{ path('app_equipements_extincteurs_supprimer', {'id': extincteur.id}) }}"
                          class="btn btn-outline-danger"
                          data-confirm="Êtes-vous sûr de vouloir supprimer l'extincteur {{ extincteur.numerotation }} ?"
                          title="Supprimer">
                          <i class="fas fa-trash"></i>
                        </a>
                        {% endif %}
                      </div>
                      {% endif %}
                    </div>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          {% if extincteurs|length > 0 %}
          {% include 'components/pagination.html.twig' with {
            'pagination': pagination,
            'route': 'app_equipements_extincteurs',
            'routeParams': {
              'emplacement': search_params.emplacement,
              'numerotation': search_params.numerotation,
              'conformite': search_params.conformite
            }
          } %}
          {% endif %}

          {% else %}
          <div class="text-center py-5">
            <i class="fas fa-fire-extinguisher fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Aucun extincteur trouvé</h5>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_equipements_extincteurs_nouveau') }}" class="btn btn-primary mt-2">
              <i class="fas fa-plus"></i> Ajouter le premier extincteur
            </a>
            {% endif %}
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}