{% extends 'base.html.twig' %}

{% block title %}Détails Inspection{% endblock %}

{% block page_title %}
<i class="fas fa-clipboard-check text-primary"></i> Détails de l'Inspection
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Informations Extincteur -->
      <div class="card mb-3">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Extincteur {{ inspection.extincteur.numerotation }}</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>Zone:</strong> <span class="badge bg-info">{{ inspection.extincteur.zone }}</span></p>
              <p><strong>Emplacement:</strong> {{ inspection.extincteur.emplacement ?? 'Non spécifié' }}</p>
              <p><strong>Agent:</strong> {{ inspection.extincteur.agentExtincteur ?? 'Non spécifié' }}</p>
            </div>
            <div class="col-md-6">
              <p><strong>Type:</strong> {{ inspection.extincteur.type ?? 'Non spécifié' }}</p>
              <p><strong>Capacité:</strong> {{ inspection.extincteur.capacite ?? 'Non spécifiée' }}</p>
              <p><strong>N° Série:</strong> {{ inspection.extincteur.numeroSerie ?? 'Non spécifié' }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Détails Inspection -->
      <div class="card mb-3">
        <div class="card-header {{ inspection.valide ? 'bg-success' : 'bg-danger' }} text-white">
          <h5 class="mb-0">
            <i class="fas fa-{{ inspection.valide ? 'check-circle' : 'times-circle' }}"></i>
            Inspection {{ inspection.valide ? 'CONFORME' : 'NON CONFORME' }}
          </h5>
        </div>
        <div class="card-body">
          <p><strong>Date inspection:</strong> {{ inspection.dateInspection|date('d/m/Y à H:i') }}</p>
          <p><strong>Inspecté par:</strong> {{ inspection.inspectePar.fullName }} ({{ inspection.inspectePar.codeAgent }})</p>
          
          <h6 class="mt-4 mb-3">Critères vérifiés:</h6>
          <div class="row">
            {% for key, label in criteres %}
            <div class="col-md-6 mb-2">
              <div class="d-flex align-items-center">
                {% if inspection.criteres[key] is defined and inspection.criteres[key] %}
                  <i class="fas fa-check-circle text-success me-2"></i>
                  <span>{{ label }}</span>
                {% else %}
                  <i class="fas fa-times-circle text-danger me-2"></i>
                  <span><strong>{{ label }}</strong></span>
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>

          {% if inspection.observations %}
          <h6 class="mt-4 mb-3">Observations:</h6>
          <div class="alert alert-secondary">
            {{ inspection.observations|nl2br }}
          </div>
          {% endif %}

          {% if inspection.photoObservation %}
          <h6 class="mt-4 mb-3">Photo d'observation:</h6>
          <div class="text-center">
            <img src="{{ asset('uploads/photos/' ~ inspection.photoObservation) }}" 
                 alt="Photo observation" 
                 class="img-fluid img-thumbnail" 
                 style="max-width: 600px;">
          </div>
          {% endif %}
        </div>
      </div>

      <!-- Actions -->
      <div class="d-flex justify-content-between">
        <div>
          <a href="{{ path('app_equipements_inspections') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
          </a>
          <a href="{{ path('app_equipements_inspection_export_pdf', {id: inspection.id}) }}" 
             class="btn btn-danger" target="_blank">
            <i class="fas fa-file-pdf"></i> Export PDF
          </a>
        </div>
        <div>
          {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('app_equipements_inspection_modifier', {id: inspection.id}) }}" 
             class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier l'inspection
          </a>
          {% endif %}
          {% if is_granted('ROLE_SUPER_ADMIN') %}
          <a href="{{ path('app_equipements_inspection_supprimer', {id: inspection.id}) }}" 
             class="btn btn-danger"
             onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette inspection ?')">
            <i class="fas fa-trash"></i> Supprimer
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

