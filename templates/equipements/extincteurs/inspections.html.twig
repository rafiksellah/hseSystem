{% extends 'base.html.twig' %}

{% block title %}Inspections MLCI{% endblock %}

{% block page_title %}
<i class="fas fa-clipboard-check text-warning"></i> Inspection MLCI (Extincteurs)
<small class="text-muted">Contrôle de conformité</small>
{% endblock %}

{% block body %}
<div class="container-fluid">
  <!-- Navigation -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-list"></i> Inspections MLCI
            {% if not is_granted('ROLE_SUPER_ADMIN') %}
            - Zone {{ user_zone }}
            {% endif %}
          </h5>
          <a href="{{ path('app_equipements_dashboard') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Liste des extincteurs à inspecter -->
    <div class="col-lg-6 mb-4">
      <div class="card shadow">
        <div class="card-header bg-warning text-white">
          <h5 class="mb-0">
            <i class="fas fa-fire-extinguisher"></i> Extincteurs disponibles
          </h5>
        </div>
        <div class="card-body">
          {% if extincteurs is not empty %}
          <div class="table-responsive">
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                  <th>Numéro</th>
                  <th>Zone</th>
                  <th>Emplacement</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                {% for extincteur in extincteurs %}
                <tr>
                  <td><strong>{{ extincteur.numerotation }}</strong></td>
                  <td>
                    <span class="badge bg-secondary">{{ extincteur.zone }}</span>
                  </td>
                  <td>{{ extincteur.emplacement ?? 'Non spécifié' }}</td>
                  <td>
                    <a href="{{ path('app_equipements_extincteurs_inspecter', {'id': extincteur.id}) }}"
                      class="btn btn-sm btn-warning">
                      <i class="fas fa-clipboard-check"></i> Inspecter
                    </a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          {% else %}
          <div class="text-center py-4">
            <i class="fas fa-fire-extinguisher fa-2x text-muted mb-2"></i>
            <p class="text-muted">Aucun extincteur disponible</p>
          </div>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Dernières inspections -->
    <div class="col-lg-6 mb-4">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">
            <i class="fas fa-history"></i> Dernières inspections
          </h5>
        </div>
        <div class="card-body">
          {% if inspections is not empty %}
          <div class="table-responsive">
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                  <th>Extincteur</th>
                  <th>Date</th>
                  <th>Inspecteur</th>
                  <th>Résultat</th>
                </tr>
              </thead>
              <tbody>
                {% for inspection in inspections|slice(0, 10) %}
                <tr>
                  <td><strong>{{ inspection.extincteur.numerotation }}</strong></td>
                  <td>{{ inspection.dateInspection|date('d/m/Y H:i') }}</td>
                  <td>{{ inspection.inspectePar.nom }} {{ inspection.inspectePar.prenom }}</td>
                  <td>
                    {% if inspection.valide %}
                    <span class="badge bg-success">
                      <i class="fas fa-check"></i> Conforme
                    </span>
                    {% else %}
                    <span class="badge bg-danger">
                      <i class="fas fa-times"></i> Non conforme
                    </span>
                    {% endif %}
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          {% else %}
          <div class="text-center py-4">
            <i class="fas fa-clipboard-check fa-2x text-muted mb-2"></i>
            <p class="text-muted">Aucune inspection enregistrée</p>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <!-- Critères d'inspection (référence) -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0">
            <i class="fas fa-info-circle"></i> Critères de conformité MLCI
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            {% set criteres = {
            'occupe_place': 'L\'extincteur occupe la place',
            'visible_accessible': 'Il est visible et accessible',
            'solidement_fixe': 'Le RIA est solidement fixé',
            'corps_non_endommage': 'Le corps d\'extincteur n\'est pas endommagé',
            'pas_traces_corrosion': 'Ne présente pas de traces de corrosion',
            'propre_couleur_rouge': 'L\'extincteur est propre (couleur rouge)',
            'etiquette_bon_etat': 'L\'étiquette existe et en bon état',
            'date_verification_ok': 'La date de la prochaine vérification n\'est pas atteinte',
            'flexible_gachette_ok': 'Flexible et gâchette sont présents et en bon état',
            'dispositif_fixation_solide': 'Dispositif de fixation est solide',
            'poignee_robuste': 'Poignée ou levier est robuste et n\'est pas endommagé',
            'goupille_plomb_presents': 'Goupille et plomb de verrouillage sont présents'
            } %}
            <div class="col-md-6">
              {% for key, critere in criteres|slice(0, 6) %}
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-check-circle text-success me-2"></i>
                <span>{{ critere }}</span>
              </div>
              {% endfor %}
            </div>
            <div class="col-md-6">
              {% for key, critere in criteres|slice(6) %}
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-check-circle text-success me-2"></i>
                <span>{{ critere }}</span>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}