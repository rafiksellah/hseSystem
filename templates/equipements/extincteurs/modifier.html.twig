{# templates/equipements/extincteurs/modifier.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier Extincteur{% endblock %}

{% block page_title %}
<i class="fas fa-edit text-warning"></i> Modifier l'extincteur {{ extincteur.numerotation }}
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-warning text-white">
          <h5 class="mb-0">
            <i class="fas fa-fire-extinguisher"></i> Modifier l'extincteur {{ extincteur.numerotation }}
          </h5>
        </div>
        <div class="card-body">
          <form method="POST">
            <!-- Informations de base -->
            <div class="row mb-4">
              <div class="col-12">
                <h6 class="text-primary border-bottom pb-2">
                  <i class="fas fa-info-circle"></i> Informations de base
                </h6>
              </div>
              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">Numérotation *</label>
                <input type="text" name="numerotation" id="numerotation" class="form-control"
                  value="{{ extincteur.numerotation }}" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone *</label>
                <select name="zone" id="zone" class="form-select" required>
                  {% for key, zone_name in zones_disponibles %}
                  <option value="{{ key }}" {{ extincteur.zone==key ? 'selected' : '' }}>
                    {{ zone_name }}
                  </option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <!-- Détails techniques -->
            <div class="row mb-4">
              <div class="col-12">
                <h6 class="text-primary border-bottom pb-2">
                  <i class="fas fa-cog"></i> Détails techniques
                </h6>
              </div>
              <div class="col-md-6 mb-3">
                <label for="emplacement" class="form-label">Emplacement</label>
                <input type="text" name="emplacement" id="emplacement" class="form-control"
                  value="{{ extincteur.emplacement }}">
              </div>
              <div class="col-md-6 mb-3">
                <label for="agent_extincteur" class="form-label">Agent extincteur</label>
                <input type="text" name="agent_extincteur" id="agent_extincteur" class="form-control"
                  value="{{ extincteur.agentExtincteur }}">
              </div>
              <div class="col-md-6 mb-3">
                <label for="type" class="form-label">Type</label>
                <input type="text" name="type" id="type" class="form-control" value="{{ extincteur.type }}">
              </div>
              <div class="col-md-6 mb-3">
                <label for="capacite" class="form-label">Capacité</label>
                <input type="text" name="capacite" id="capacite" class="form-control" value="{{ extincteur.capacite }}">
              </div>
            </div>

            <!-- Dates importantes -->
            <div class="row mb-4">
              <div class="col-12">
                <h6 class="text-primary border-bottom pb-2">
                  <i class="fas fa-calendar"></i> Dates importantes
                </h6>
              </div>
              <div class="col-md-4 mb-3">
                <label for="date_fabrication" class="form-label">Date de fabrication</label>
                <input type="date" name="date_fabrication" id="date_fabrication" class="form-control"
                  value="{{ extincteur.dateFabrication ? extincteur.dateFabrication|date('Y-m-d') : '' }}">
              </div>
              <div class="col-md-4 mb-3">
                <label for="date_epreuve" class="form-label">Date d'épreuve</label>
                <input type="date" name="date_epreuve" id="date_epreuve" class="form-control"
                  value="{{ extincteur.dateEpreuve ? extincteur.dateEpreuve|date('Y-m-d') : '' }}">
              </div>
              <div class="col-md-4 mb-3">
                <label for="date_fin_vie" class="form-label">Date de fin de vie</label>
                <input type="date" name="date_fin_vie" id="date_fin_vie" class="form-control"
                  value="{{ extincteur.dateFinDeVie ? extincteur.dateFinDeVie|date('Y-m-d') : '' }}">
              </div>
            </div>

            <!-- Numéro de série -->
            <div class="row mb-4">
              <div class="col-md-6">
                <label for="numero_serie" class="form-label">Numéro de série</label>
                <input type="text" name="numero_serie" id="numero_serie" class="form-control"
                  value="{{ extincteur.numeroSerie }}">
              </div>
            </div>

            <!-- Boutons -->
            <div class="row">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <a href="{{ path('app_equipements_extincteurs') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                  </a>
                  <button type="submit" class="btn btn-warning btn-lg">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}