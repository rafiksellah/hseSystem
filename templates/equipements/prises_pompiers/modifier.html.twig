{% extends 'base.html.twig' %}

{% block title %}Modifier Prise Pompier{% endblock %}

{% block page_title %}
<i class="fas fa-fire-hydrant text-danger"></i> Modifier Prise Pompier
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fas fa-edit"></i> Modifier Prise Pompier</h5>
          <a href="{{ path('app_equipements_prises_pompiers') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
          </a>
        </div>
        <div class="card-body">
          <form method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone <span class="text-danger">*</span></label>
                <select class="form-select" id="zone" name="zone" required>
                  {% for key, zone_name in zones_disponibles %}
                    <option value="{{ zone_name }}" {{ prise.zone == zone_name ? 'selected' : '' }}>{{ zone_name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="emplacement" class="form-label">Emplacement <span class="text-danger">*</span></label>
                <select class="form-select" id="emplacement" name="emplacement" required>
                  {% for key, empl in emplacements_disponibles %}
                    <option value="{{ empl }}" {{ prise.emplacement == empl ? 'selected' : '' }}>{{ empl }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="dimatere" class="form-label">Diam√®tre <span class="text-danger">*</span></label>
                <select class="form-select" id="dimatere" name="dimatere" required>
                  {% for key, diam in diametres_disponibles %}
                    <option value="{{ diam }}" {{ prise.dimatere == diam ? 'selected' : '' }}>{{ diam }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="{{ path('app_equipements_prises_pompiers') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Annuler
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer les modifications
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

