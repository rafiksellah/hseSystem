{% extends 'base.html.twig' %}

{% block title %}Prises Pompiers - État{% endblock %}

{% block page_title %}
<i class="fas fa-fire-hydrant text-danger"></i> Prises Pompiers - État
{% endblock %}

{% block body %}
<div class="container-fluid">
  <!-- Barre d'outils -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-list"></i> Liste des Prises Pompiers
          </h5>
          <div>
            <a href="{{ path('app_equipements_dashboard') }}" class="btn btn-outline-secondary btn-sm me-2">
              <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('app_equipements_prises_pompiers_export_excel', app.request.query.all) }}" 
               class="btn btn-success btn-sm me-2">
              <i class="fas fa-file-excel"></i> Export Excel
            </a>
            <a href="{{ path('app_equipements_prises_pompiers_export_pdf', app.request.query.all) }}" 
               class="btn btn-danger btn-sm me-2">
              <i class="fas fa-file-pdf"></i> Export PDF
            </a>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_equipements_prises_pompiers_nouveau') }}" class="btn btn-primary btn-sm">
              <i class="fas fa-plus"></i> Ajouter
            </a>
            {% endif %}
          </div>
        </div>
        <div class="card-body">
          <!-- Filtres -->
          <form method="GET" class="row g-3 mb-3">
            <div class="col-md-4">
              <label for="zone" class="form-label">Zone</label>
              <select name="zone" id="zone" class="form-select form-select-sm">
                <option value="">Toutes les zones</option>
                {% for key, zone_name in constant('App\\Entity\\PrisePompier::ZONES') %}
                  <option value="{{ zone_name }}" {{ search_params.zone == zone_name ? 'selected' : '' }}>{{ zone_name }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-3">
              <label for="emplacement" class="form-label">Emplacement</label>
              <input type="text" name="emplacement" id="emplacement" class="form-control form-control-sm"
                value="{{ search_params.emplacement }}" placeholder="Ex: ENTREE GRATTAGE">
            </div>
            <div class="col-md-2">
              <label for="conformite" class="form-label">État</label>
              <select name="conformite" id="conformite" class="form-select form-select-sm">
                <option value="">Tous</option>
                <option value="conforme" {{ search_params.conformite=='conforme' ? 'selected' : '' }}>Conformes</option>
                <option value="non_conforme" {{ search_params.conformite=='non_conforme' ? 'selected' : '' }}>Non conformes</option>
                <option value="non_inspecte" {{ search_params.conformite=='non_inspecte' ? 'selected' : '' }}>Non inspectés</option>
              </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
              <button type="submit" class="btn btn-primary btn-sm me-2">
                <i class="fas fa-search"></i> Filtrer
              </button>
              <a href="{{ path('app_equipements_prises_pompiers') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-undo"></i> Reset
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Liste des prises -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          {% if prises is not empty %}
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th>Zone</th>
                  <th>Emplacement</th>
                  <th>Diamètre</th>
                  <th>État</th>
                  <th>Dernière Inspection</th>
                  <th width="200">Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for prise in prises %}
                <tr>
                  <td><span class="badge bg-primary">{{ prise.zone }}</span></td>
                  <td>{{ prise.emplacement ?? '-' }}</td>
                  <td class="text-center"><strong>{{ prise.dimatere ?? '-' }}</strong></td>
                  <td>
                    {% set conformite = prise.statutConformite %}
                    {% if conformite == 'Conforme' %}
                    <span class="badge bg-success">
                      <i class="fas fa-check-circle"></i> Conforme
                    </span>
                    {% elseif conformite == 'Non conforme' %}
                    <span class="badge bg-danger">
                      <i class="fas fa-times-circle"></i> Non conforme
                    </span>
                    {% else %}
                    <span class="badge bg-warning">
                      <i class="fas fa-clock"></i> Non inspecté
                    </span>
                    {% endif %}
                  </td>
                  <td>
                    {% set derniere = prise.derniereInspection %}
                    {% if derniere %}
                    <small>
                      {{ derniere.dateInspection|date('d/m/Y') }}<br>
                      <span class="text-muted">par {{ derniere.inspectePar.codeAgent }}</span>
                    </small>
                    {% else %}
                    <span class="text-muted">-</span>
                    {% endif %}
                  </td>
                  <td>
                    <div class="btn-group-vertical d-flex gap-1" role="group">
                      <a href="{{ path('app_equipements_prise_pompier_details', {id: prise.id}) }}" 
                         class="btn btn-info btn-sm" title="Voir détails">
                        <i class="fas fa-eye"></i> Voir détails
                      </a>
                      <a href="{{ path('app_equipements_prises_pompiers_inspecter', {id: prise.id}) }}" 
                         class="btn btn-primary btn-sm" title="Inspecter">
                        <i class="fas fa-clipboard-check"></i> Inspecter
                      </a>
                      
                      {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                      <div class="btn-group btn-group-sm mt-1" role="group">
                        <a href="{{ path('app_equipements_prises_pompiers_modifier', {'id': prise.id}) }}"
                          class="btn btn-outline-secondary" title="Modifier">
                          <i class="fas fa-cog"></i>
                        </a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="{{ path('app_equipements_prises_pompiers_supprimer', {'id': prise.id}) }}"
                          class="btn btn-outline-danger"
                          onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette prise pompier ?')"
                          title="Supprimer">
                          <i class="fas fa-trash"></i>
                        </a>
                        {% endif %}
                      </div>
                      {% endif %}
                    </div>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          {% include 'components/pagination.html.twig' with {
            'pagination': pagination,
            'route': 'app_equipements_prises_pompiers',
            'routeParams': {
              'zone': search_params.zone,
              'emplacement': search_params.emplacement,
              'conformite': search_params.conformite
            }
          } %}

          {% else %}
          <div class="text-center py-5">
            <i class="fas fa-fire-hydrant fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Aucune prise pompier trouvée</h5>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_equipements_prises_pompiers_nouveau') }}" class="btn btn-primary mt-2">
              <i class="fas fa-plus"></i> Ajouter la première prise pompier
            </a>
            {% endif %}
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

