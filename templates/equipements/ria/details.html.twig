{% extends 'base.html.twig' %}

{% block title %}Détails RIA{% endblock %}

{% block page_title %}
<i class="fas fa-tint text-info"></i> Détails RIA
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">
            <i class="fas fa-tint"></i> RIA {{ ria.numerotation }}
          </h5>
        </div>
        <div class="card-body">
          <!-- Informations principales -->
          <div class="row mb-4">
            <div class="col-12">
              <h6 class="text-info border-bottom pb-2">
                <i class="fas fa-info-circle"></i> Informations principales
              </h6>
            </div>
            <div class="col-md-6">
              <p><strong>Numérotation:</strong> <span class="badge bg-dark">{{ ria.numerotation }}</span></p>
              <p><strong>Zone:</strong> <span class="badge bg-info">{{ ria.zone }}</span></p>
              <p><strong>Agent extincteur:</strong> {{ ria.agentExtincteur ?? 'Non spécifié' }}</p>
            </div>
            <div class="col-md-6">
              <p><strong>Diamètre:</strong> 
                {% if ria.dimatere %}
                  {{ ria.dimatere }} mm
                {% else %}
                  <span class="text-muted">Non spécifié</span>
                {% endif %}
              </p>
              <p><strong>Longueur:</strong> 
                {% if ria.longueur %}
                  {{ ria.longueur }} m
                {% else %}
                  <span class="text-muted">Non spécifiée</span>
                {% endif %}
              </p>
              <p><strong>Date création:</strong> {{ ria.dateCreation|date('d/m/Y H:i') }}</p>
            </div>
          </div>

          <!-- Statut de validation -->
          <div class="row mb-4">
            <div class="col-12">
              <h6 class="text-info border-bottom pb-2">
                <i class="fas fa-check-circle"></i> Statut de validation
              </h6>
            </div>
            <div class="col-12">
              {% if ria.valide %}
              <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <strong>RIA validé</strong><br>
                <small>
                  Validé le {{ ria.dateValidation|date('d/m/Y à H:i') }} 
                  par {{ ria.validePar.fullName }} ({{ ria.validePar.codeAgent }})
                </small>
              </div>
              {% else %}
              <div class="alert alert-warning">
                <i class="fas fa-clock"></i>
                <strong>RIA en attente de validation</strong>
              </div>
              {% endif %}
            </div>
          </div>
          
          <!-- Historique des inspections -->
          <div class="row mb-4">
            <div class="col-12">
              <h6 class="text-info border-bottom pb-2">
                <i class="fas fa-history"></i> Historique des Inspections
              </h6>
              
              {% if ria.inspections|length > 0 %}
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead class="table-light">
                    <tr>
                      <th>Date</th>
                      <th>Inspecteur</th>
                      <th>Résultat</th>
                      <th>Observations</th>
                      {% if is_granted('ROLE_ADMIN') %}<th>Actions</th>{% endif %}
                    </tr>
                  </thead>
                  <tbody>
                    {% for inspection in ria.inspections %}
                    <tr>
                      <td>{{ inspection.dateInspection|date('d/m/Y H:i') }}</td>
                      <td>{{ inspection.inspectePar.fullName }}</td>
                      <td>
                        {% if inspection.valide %}
                          <span class="badge bg-success">Conforme</span>
                        {% else %}
                          <span class="badge bg-danger">Non conforme</span>
                        {% endif %}
                      </td>
                      <td>{{ inspection.observations ?? '-' }}</td>
                      {% if is_granted('ROLE_ADMIN') %}
                      <td>
                        <div class="btn-group" role="group">
                          <button type="button" class="btn btn-info btn-sm" 
                                  data-bs-toggle="modal" data-bs-target="#inspectionModal{{ inspection.id }}"
                                  title="Voir détails">
                            <i class="fas fa-eye"></i>
                          </button>
                          <form method="POST" action="{{ path('app_equipements_supprimer_inspection_ria', {'id': inspection.id}) }}" 
                                style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette inspection ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_inspection_ria') }}">
                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer l'inspection">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </div>
                        
                        <!-- Modal pour détails inspection -->
                        <div class="modal fade" id="inspectionModal{{ inspection.id }}" tabindex="-1">
                          <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                              <div class="modal-header bg-info text-white">
                                <h5 class="modal-title">
                                  <i class="fas fa-clipboard-check"></i> Détails Inspection RIA - {{ inspection.dateInspection|date('d/m/Y H:i') }}
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                              </div>
                              <div class="modal-body">
                                <h6><strong>RIA:</strong> {{ ria.numerotation }}</h6>
                                <p><strong>Inspecté par:</strong> {{ inspection.inspectePar.fullName }}</p>
                                <p><strong>Résultat:</strong> 
                                  {% if inspection.valide %}
                                    <span class="badge bg-success">Conforme</span>
                                  {% else %}
                                    <span class="badge bg-danger">Non conforme</span>
                                  {% endif %}
                                </p>
                                
                                <h6 class="mt-3">Critères vérifiés:</h6>
                                {% for key, label in constant('App\\Entity\\InspectionRIA::CRITERES') %}
                                  <div class="d-flex align-items-center mb-2">
                                    {% if inspection.criteres[key] is defined and inspection.criteres[key] %}
                                      <i class="fas fa-check-circle text-success me-2"></i>
                                      <span>{{ label }}</span>
                                    {% else %}
                                      <i class="fas fa-times-circle text-danger me-2"></i>
                                      <span><strong>{{ label }}</strong></span>
                                    {% endif %}
                                  </div>
                                {% endfor %}
                                
                                {% if inspection.observations %}
                                <hr>
                                <h6>Observations:</h6>
                                <p>{{ inspection.observations|nl2br }}</p>
                                {% endif %}
                                {% if inspection.photoObservation %}
                                <hr>
                                <h6>Photo:</h6>
                                <img src="{{ asset('uploads/photos/' ~ inspection.photoObservation) }}" class="img-fluid" alt="Photo">
                                {% endif %}
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                      {% endif %}
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              {% else %}
              <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Aucune inspection pour le moment
              </div>
              {% endif %}
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <div>
              <a href="{{ path('app_equipements_ria') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
              </a>
              <a href="{{ path('app_equipements_ria_export_detail_pdf', {id: ria.id}) }}" 
                 class="btn btn-danger" target="_blank">
                <i class="fas fa-file-pdf"></i> Export PDF
              </a>
            </div>
            <div>
              {% if not ria.valide %}
              <a href="{{ path('app_equipements_ria_valider', {id: ria.id}) }}" 
                 class="btn btn-success">
                <i class="fas fa-check"></i> Valider le RIA
              </a>
              {% endif %}
              {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('app_equipements_ria_modifier', {id: ria.id}) }}" 
                 class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
              </a>
              {% endif %}
              {% if is_granted('ROLE_SUPER_ADMIN') %}
              <a href="{{ path('app_equipements_ria_supprimer', {id: ria.id}) }}" 
                 class="btn btn-danger"
                 onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce RIA ?')">
                <i class="fas fa-trash"></i> Supprimer
              </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}



