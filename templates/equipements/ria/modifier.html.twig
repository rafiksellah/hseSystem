{% extends 'base.html.twig' %}

{% block title %}Modifier RIA{% endblock %}

{% block page_title %}
<i class="fas fa-edit text-warning"></i> Modifier RIA
<small class="text-muted">{{ ria.numerotation }}</small>
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">
            <i class="fas fa-fire-extinguisher"></i> Modifier RIA
          </h5>
        </div>
        <div class="card-body">
          <form method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">
                  <i class="fas fa-hashtag"></i> Numérotation *
                </label>
                <input type="text" class="form-control" id="numerotation" name="numerotation" 
                       value="{{ ria.numerotation }}" required>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">
                  <i class="fas fa-map-marker-alt"></i> Zone *
                </label>
                <div class="input-group">
                  <select name="zone" id="zone" class="form-select" required>
                    <option value="">Sélectionnez une zone</option>
                    {% for key, zone_name in zones_disponibles %}
                    <option value="{{ key }}" {{ ria.zone == key ? 'selected' : '' }}>
                      {{ zone_name }}
                    </option>
                    {% endfor %}
                    <option value="__nouvelle_zone__">+ Ajouter une nouvelle zone</option>
                  </select>
                  <input type="text" id="nouvelle_zone" class="form-control" placeholder="Nouvelle zone" style="display: none;">
                  <input type="hidden" id="zone_finale" name="zone_finale" value="{{ ria.zone }}">
                </div>
                <small class="text-muted">Sélectionnez une zone existante ou ajoutez-en une nouvelle</small>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="agent_extincteur" class="form-label">
                  <i class="fas fa-flask"></i> Agent extincteur
                </label>
                <input type="text" class="form-control" id="agent_extincteur" name="agent_extincteur" 
                       value="{{ ria.agentExtincteur }}" placeholder="Ex: CO2, Poudre ABC">
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="dimatere" class="form-label">
                  <i class="fas fa-ruler"></i> Diamètre (mm)
                </label>
                <input type="number" class="form-control" id="dimatere" name="dimatere" 
                       value="{{ ria.dimatere }}" placeholder="Ex: 25">
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="longueur" class="form-label">
                  <i class="fas fa-ruler-horizontal"></i> Longueur (m)
                </label>
                <input type="number" class="form-control" id="longueur" name="longueur" 
                       value="{{ ria.longueur }}" placeholder="Ex: 30">
              </div>
            </div>

            <div class="row">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <a href="{{ path('app_equipements_ria') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                  </a>
                  <button type="submit" class="btn btn-warning btn-lg">
                    <i class="fas fa-save"></i> Modifier le RIA
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const zoneSelect = document.getElementById('zone');
    const nouvelleZoneInput = document.getElementById('nouvelle_zone');
    const zoneFinaleInput = document.getElementById('zone_finale');
    
    zoneSelect.addEventListener('change', function() {
        if (this.value === '__nouvelle_zone__') {
            nouvelleZoneInput.style.display = 'block';
            nouvelleZoneInput.required = true;
            nouvelleZoneInput.focus();
        } else {
            nouvelleZoneInput.style.display = 'none';
            nouvelleZoneInput.required = false;
            nouvelleZoneInput.value = '';
            // Mettre à jour la zone finale avec la valeur sélectionnée
            zoneFinaleInput.value = this.value;
        }
    });
    
    // Mettre à jour la zone finale quand on tape dans le champ nouvelle zone
    nouvelleZoneInput.addEventListener('input', function() {
        if (zoneSelect.value === '__nouvelle_zone__') {
            zoneFinaleInput.value = this.value.trim();
        }
    });
    
    // Gérer la soumission du formulaire
    document.querySelector('form').addEventListener('submit', function(e) {
        if (zoneSelect.value === '__nouvelle_zone__') {
            if (nouvelleZoneInput.value.trim() === '') {
                e.preventDefault();
                alert('Veuillez saisir le nom de la nouvelle zone');
                nouvelleZoneInput.focus();
                return;
            }
            // Mettre la nouvelle zone dans le champ caché
            zoneFinaleInput.value = nouvelleZoneInput.value.trim();
        }
    });
});
</script>
{% endblock %}
