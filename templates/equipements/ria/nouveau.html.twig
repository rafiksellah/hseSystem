{% extends 'base.html.twig' %}

{% block title %}Nouveau RIA{% endblock %}

{% block page_title %}
<i class="fas fa-plus-circle text-primary"></i> Ajouter un RIA
{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">
            <i class="fas fa-tint"></i> Nouveau RIA
          </h5>
        </div>
        <div class="card-body">
          <form method="POST">
            <!-- Informations de base -->
            <div class="row mb-4">
              <div class="col-12">
                <h6 class="text-primary border-bottom pb-2">
                  <i class="fas fa-info-circle"></i> Informations de base
                </h6>
              </div>
              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">Numérotation *</label>
                <input type="text" name="numerotation" id="numerotation" class="form-control" 
                       value="{{ ria.numerotation }}" 
                       placeholder="Ex: ST.PF 01, RIA-001" required>
                <small class="text-muted">Numéro unique pour identifier le RIA</small>
              </div>
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone *</label>
                <div class="input-group">
                  <select name="zone" id="zone" class="form-select" required>
                    <option value="">Sélectionnez une zone</option>
                    {% for key, zone_name in zones_disponibles %}
                    <option value="{{ key }}" {{ ria.zone==key ? 'selected' : '' }}>
                      {{ zone_name }}
                    </option>
                    {% endfor %}
                    <option value="__nouvelle_zone__">+ Ajouter une nouvelle zone</option>
                  </select>
                  <input type="text" id="nouvelle_zone" class="form-control" placeholder="Nouvelle zone" style="display: none;">
                  <input type="hidden" id="zone_finale" name="zone_finale" value="">
                </div>
                <small class="text-muted">Sélectionnez une zone existante ou ajoutez-en une nouvelle</small>
              </div>
            </div>

            <!-- Caractéristiques techniques -->
            <div class="row mb-4">
              <div class="col-12">
                <h6 class="text-primary border-bottom pb-2">
                  <i class="fas fa-cog"></i> Caractéristiques techniques
                </h6>
              </div>
              <div class="col-md-4 mb-3">
                <label for="agent_extincteur" class="form-label">Agent extincteur</label>
                <input type="text" name="agent_extincteur" id="agent_extincteur" class="form-control" 
                       value="{{ ria.agentExtincteur }}" 
                       placeholder="Ex: Eau, Mousse">
                <small class="text-muted">Type d'agent extincteur</small>              </div>
              <!-- Diamètre -->
              <div class="col-md-4 mb-3">
                <label for="dimatere" class="form-label">Diamètre (mm)</label>
                <input type="number" name="dimatere" id="dimatere" class="form-control" 
                       value="{{ ria.dimatere }}" 
                       placeholder="Ex: 33" min="1" max="200">
                <small class="text-muted">En millimètres</small>
              </div>
              <div class="col-md-4 mb-3">
                <label for="longueur" class="form-label">Longueur (m)</label>
                <input type="number" name="longueur" id="longueur" class="form-control" 
                       value="{{ ria.longueur }}" 
                       placeholder="Ex: 30" min="1" max="100">
                <small class="text-muted">En mètres</small>
              </div>
            </div>

            <!-- Boutons -->
            <div class="row">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <a href="{{ path('app_equipements_ria') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                  </a>
                  <button type="submit" class="btn btn-info btn-lg">
                    <i class="fas fa-save"></i> Enregistrer le RIA
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const zoneSelect = document.getElementById('zone');
    const nouvelleZoneInput = document.getElementById('nouvelle_zone');
    const zoneFinaleInput = document.getElementById('zone_finale');
    
    zoneSelect.addEventListener('change', function() {
        if (this.value === '__nouvelle_zone__') {
            nouvelleZoneInput.style.display = 'block';
            nouvelleZoneInput.required = true;
            nouvelleZoneInput.focus();
        } else {
            nouvelleZoneInput.style.display = 'none';
            nouvelleZoneInput.required = false;
            nouvelleZoneInput.value = '';
            // Mettre à jour la zone finale avec la valeur sélectionnée
            zoneFinaleInput.value = this.value;
        }
    });
    
    // Mettre à jour la zone finale quand on tape dans le champ nouvelle zone
    nouvelleZoneInput.addEventListener('input', function() {
        if (zoneSelect.value === '__nouvelle_zone__') {
            zoneFinaleInput.value = this.value.trim();
        }
    });
    
    // Gérer la soumission du formulaire
    document.querySelector('form').addEventListener('submit', function(e) {
        if (zoneSelect.value === '__nouvelle_zone__') {
            if (nouvelleZoneInput.value.trim() === '') {
                e.preventDefault();
                alert('Veuillez saisir le nom de la nouvelle zone');
                nouvelleZoneInput.focus();
                return;
            }
            // Mettre la nouvelle zone dans le champ caché
            zoneFinaleInput.value = nouvelleZoneInput.value.trim();
        }
    });
});
</script>
{% endblock %}