{% extends 'base.html.twig' %}

{% block title %}Inspecter Désenfumage{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h5><i class="fas fa-wind"></i> Inspection Désenfumage {{ desenfumage.numerotation }}</h5>
        </div>
        <div class="card-body">
          <form method="POST" enctype="multipart/form-data">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="text-primary mb-0">
                <i class="fas fa-tasks"></i> Critères de contrôle
              </h6>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-success btn-sm" onclick="selectAll('oui')">
                  <i class="fas fa-check-double"></i> Tout OUI
                </button>
                <button type="button" class="btn btn-danger btn-sm" onclick="selectAll('non')">
                  <i class="fas fa-times"></i> Tout NON
                </button>
              </div>
            </div>
            
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Critère</th>
                  <th class="text-center">OUI</th>
                  <th class="text-center">NON</th>
                </tr>
              </thead>
              <tbody>
                {% for key, label in criteres %}
                <tr>
                  <td>{{ label }}</td>
                  <td class="text-center">
                    <input type="radio" name="critere_{{ key }}" value="oui" required>
                  </td>
                  <td class="text-center">
                    <input type="radio" name="critere_{{ key }}" value="non" required>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>

            <div class="row mt-3">
              <div class="col-md-8">
                <label>Observations</label>
                <textarea name="observations" class="form-control" rows="4"></textarea>
              </div>
              <div class="col-md-4">
                <label>Photo</label>
                <input type="file" name="photo_observation" class="form-control" accept="image/*">
              </div>
            </div>

            <div class="mt-4">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> Enregistrer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Fonction pour sélectionner tous les critères
function selectAll(value) {
  const radios = document.querySelectorAll('input[type="radio"][value="' + value + '"]');
  radios.forEach(radio => {
    radio.checked = true;
  });
  
  const message = value === 'oui' ? 'Tous les critères sont marqués OUI ✓' : 'Tous les critères sont marqués NON ✗';
  const alertDiv = document.createElement('div');
  alertDiv.className = 'alert alert-' + (value === 'oui' ? 'success' : 'warning') + ' alert-dismissible fade show mt-2';
  alertDiv.innerHTML = `
    <i class="fas fa-${value === 'oui' ? 'check-circle' : 'exclamation-triangle'}"></i>
    ${message}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  `;
  
  const form = document.querySelector('form');
  const firstElement = form.firstElementChild;
  form.insertBefore(alertDiv, firstElement);
  
  setTimeout(() => {
    if (alertDiv.parentElement) {
      alertDiv.remove();
    }
  }, 3000);
}
</script>
{% endblock %}

