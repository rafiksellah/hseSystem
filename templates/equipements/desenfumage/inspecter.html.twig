{% extends 'base.html.twig' %}

{% block title %}Inspecter Désenfumage{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h5><i class="fas fa-wind"></i> Inspection Désenfumage {{ desenfumage.numerotation }}</h5>
        </div>
        <div class="card-body">
          <form method="POST" enctype="multipart/form-data">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Critère</th>
                  <th class="text-center">OUI</th>
                  <th class="text-center">NON</th>
                </tr>
              </thead>
              <tbody>
                {% for key, label in criteres %}
                <tr>
                  <td>{{ label }}</td>
                  <td class="text-center">
                    <input type="radio" name="critere_{{ key }}" value="oui" required>
                  </td>
                  <td class="text-center">
                    <input type="radio" name="critere_{{ key }}" value="non" required>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>

            <div class="row mt-3">
              <div class="col-md-8">
                <label>Observations</label>
                <textarea name="observations" class="form-control" rows="4"></textarea>
              </div>
              <div class="col-md-4">
                <label>Photo</label>
                <input type="file" name="photo_observation" class="form-control" accept="image/*">
              </div>
            </div>

            <div class="mt-4">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> Enregistrer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

