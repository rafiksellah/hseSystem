{% extends 'base.html.twig' %}

{% block title %}Modifier Sirène{% endblock %}

{% block page_title %}
<i class="fas fa-bell text-warning"></i> Modifier Sirène
{% endblock %}

{% block body %}
{% include '_partials/datalists.html.twig' %}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fas fa-edit"></i> Modifier Sirène</h5>
          <a href="{{ path('app_equipements_sirenes') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
          </a>
        </div>
        <div class="card-body">
          <form method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="zone" class="form-label">Zone <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="zone" name="zone" 
                       value="{{ sirene.zone }}" list="zone-sirene-options" 
                       placeholder="Saisir ou sélectionner une zone" required>
                <datalist id="zone-sirene-options">
                  {% for key, zone in zones_disponibles %}
                    <option value="{{ zone }}">
                  {% endfor %}
                </datalist>
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>
              </div>

              <div class="col-md-6 mb-3">
                <label for="numerotation" class="form-label">Numérotation <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="numerotation" name="numerotation" 
                       value="{{ sirene.numerotation }}" placeholder="Ex: SIR-001" required>
                <small class="text-muted">Numérotation libre (saisie manuelle)</small>
              </div>

              <div class="col-md-6 mb-3">
                <label for="emplacement" class="form-label">Emplacement</label>
                <input type="text" class="form-control" id="emplacement" name="emplacement" 
                       value="{{ sirene.emplacement }}" list="emplacement-sirene-options" 
                       placeholder="Saisir ou sélectionner un emplacement">
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>
              </div>

              <div class="col-md-6 mb-3">
                <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                <input type="text" name="type" id="type" class="form-control" 
                       value="{{ sirene.type }}" list="type-sirene-options" 
                       placeholder="Saisir ou sélectionner un type" required>
                <small class="text-muted">Type 2 : Saisie + Liste déroulante</small>
              </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="{{ path('app_equipements_sirenes') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Annuler
              </a>
              <button type="submit" class="btn btn-warning">
                <i class="fas fa-save"></i> Enregistrer les modifications
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

